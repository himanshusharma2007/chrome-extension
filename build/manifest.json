{
  "manifest_version": 3,
  "name": "Language Learning Extension",
  "version": "1.0",
  "description": "Learn language while browsing",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "activeTab"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
